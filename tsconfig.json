{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "outDir": "./dist",
        "declaration": true,
        "rootDir": "./src",
        "types": ["node"],
        "allowJs": false,
        "strict": true,
        "esModuleInterop": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "moduleResolution": "nodenext",
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["**/*.spec.ts", "node_modules"],
    "include": ["src/**/*.ts", "src/**/*.tsx", "tsup.config.ts"]
}
