{
    "compilerOptions": {
        "target": "esnext",
        "module": "NodeNext",
        "outDir": "./lib",
        "declaration": true,
        "rootDir": "./src",
        "types": ["node"],
        "allowJs": false,
        "strict": true,
        "esModuleInterop": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "moduleResolution": "nodenext",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["**/*.spec.ts", "node_modules/**/*"]
}
